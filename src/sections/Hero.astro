---
import Button from "../components/Button.astro";
---

<div
	class="grid grid-cols-1 lg:grid-cols-2 md:gap-3 bg-blue-100 rounded-3xl overflow-hidden"
>
	<div class="flex flex-col gap-3 md:justify-center p-4 pt-6 md:p-6">
		<h1>Time tracking you grow with</h1>
		<p>
			Taskando is a new app on the block that helps you track your projects.<br
			/>
			It combines qualitative and quantiative insights, and facilitates better retrospective,
			learning, and self-development.
		</p>
		<div class="mt-2 flex gap-2 flex-wrap">
			<Button name="Find out more" id="scroll-button" minimal />
			<Button
				name="Join the waitlist"
				href="https://form.typeform.com/to/sBQ8OlW8"
			/>
		</div>
	</div>
	<div
		class="bg-blue-600 mt-3 md:mt-4 lg:mt-[0px] h-[16rem] sm:h-[24.625rem] flex items-center justify-center relative"
	>
		<img
			src="/dots.svg"
			alt=""
			class="w-6 absolute top-3 sm:top-6 right-4 sm:right-6 z-0"
		/>
		<img
			src="/task@2x.png"
			class="w-full md:w-3/4 xl:w-2/3 z-10"
			alt="An example task"
			width="400"
			height="185"
			data-tilt
			data-tilt-max="5"
		/>
	</div>
</div>

<script>
	import VanillaTilt from "vanilla-tilt";

	const scrollSlider = () => {
		const slider = document.querySelector(".cards") as HTMLElement;
		slider.scrollIntoView({ behavior: "smooth" });
	};
	const button = document.querySelector("#scroll-button") as HTMLElement;
	button.addEventListener("click", scrollSlider);
</script>
