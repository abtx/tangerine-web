---
import Button from "../components/Button.astro";
---

<div class="flex flex-col lg:flex-row">
	<div class="w-full lg:w-1/2 flex flex-col gap-3 md:justify-center">
		<h1>Time tracking you will grow with</h1>
		<p>
			Taskando is a new app on the block that helps you track your projects,
			combines qualitative and quantiative insights, and facilitates better
			retrospective, learning, and self-development.
		</p>
		<div class="mt-2 flex gap-2 flex-wrap">
			<Button name="Find out more" id="scroll-button" minimal />
			<Button
				name="Join the waitlist"
				href="https://form.typeform.com/to/sBQ8OlW8"
			/>
		</div>
	</div>
	<div
		class="w-full lg:w-1/2 bg-blue-100 mt-3 md:mt-4 lg:mt-[0px] lg:ml-6 rounded-3xl h-[16rem] sm:h-[24.625rem] flex items-center justify-center relative"
		data-tilt
		data-tilt-max="5"
	>
		<img
			src="/dots.svg"
			alt=""
			class="w-6 absolute hidden sm:block top-6 right-6"
		/>
		<img
			src="/task@2x.png"
			class="w-full md:w-3/4 xl:w-2/3"
			alt="An example task"
			width="400"
			height="185"
		/>
	</div>
</div>

<script>
	import VanillaTilt from "vanilla-tilt";

	const scrollSlider = () => {
		const slider = document.querySelector(".mySwiper") as HTMLElement;
		slider.scrollIntoView({ behavior: "smooth" });
	};
	const button = document.querySelector("#scroll-button") as HTMLElement;
	button.addEventListener("click", scrollSlider);
</script>
