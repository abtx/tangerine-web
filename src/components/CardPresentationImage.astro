---
export interface Props {
	imageSrc: string;
	imageAlt: string;
}
const { imageSrc, imageAlt } = Astro.props;
---

<div class="h-full relative overflow-hidden xl:overflow-visible">
	<img
		src={imageSrc}
		alt={imageAlt}
		class="absolute xl:-left-6 xl:-translate-y-4 left-1/2 transform -translate-x-1/2 translate-y-[10rem] sm:translate-y-[8rem] md:translate-y-[10rem] xl:translate-x-4 xl:translate-x-0 bottom-[8rem] sm:bottom-[0px] xl:scale-125"
	/>
</div>
