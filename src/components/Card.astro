---
import CardStyle from "./CardStyle.astro";
export interface Props {
	title: string;
	label: string;
	cta: string;
	href: string;
}

const { title, label, cta, href } = Astro.props as Props;
---

<CardStyle>
	<div class="flex flex-row">
		<div class="flex flex-col main p-4 w-7/12">
			<div>
				{label}
			</div>
			<h2>{title}</h2>
			<slot name="main" />
			<div>
				<a href={href}>{cta}</a>
			</div>
		</div>
		<div class="w-5/12">
			<slot name="presentation" />
		</div>
	</div>
</CardStyle>
