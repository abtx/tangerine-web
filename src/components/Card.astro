---
import CardStyle from "./CardStyle.astro";
export interface Props {
	title: string;
	label: string;
	cta: string;
	href: string;
	alternate?: boolean;
}

const { title, label, cta, href, alternate } = Astro.props as Props;
---

<CardStyle>
	<div
		class={`flex flex-col-reverse ${
			alternate ? "xl:flex-row-reverse" : "xl:flex-row"
		}`}
	>
		<div
			class="flex flex-col main py-5 px-4 xl:pl-6 xl:pr-[8rem] w-full xl:w-7/12"
		>
			<div class="text-gray-400 mb-5 xl:mb-[5rem]">
				{label}
			</div>
			<h1 class="font-bold mb-5 xl:mb-5">{title}</h1>
			<slot name="main" />
			<div class="mt-5 xl:mt-[5rem]">
				<a href={href}>{cta}</a>
			</div>
		</div>
		<div class="w-full xl:w-5/12">
			<slot name="presentation" />
		</div>
	</div>
</CardStyle>
