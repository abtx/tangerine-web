---
import CardStyle from "./CardStyle.astro";
export interface Props {
	title: string;
	label: string;
	cta: string;
	href: string;
	alternate?: boolean;
}

const { title, label, cta, href, alternate } = Astro.props as Props;
---

<CardStyle>
	<div class={`flex ${alternate ? "flex-row-reverse" : "flex-row"}`}>
		<div class="flex flex-col main py-5 pl-6 pr-[8rem] w-7/12">
			<div class="text-gray-400 mb-[5rem]">
				{label}
			</div>
			<h1 class="font-bold mb-5">{title}</h1>
			<slot name="main" />
			<div class="mt-[5rem]">
				<a href={href}>{cta}</a>
			</div>
		</div>
		<div class="w-5/12">
			<slot name="presentation" />
		</div>
	</div>
</CardStyle>
