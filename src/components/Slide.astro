---
export interface Props {
	imageSrc: string;
	imageAlt: string;
	header: string;
}

const { imageSrc, imageAlt, header } = Astro.props;
---

<div class="flex flex-col lg:flex-row p-6 gap-5 h-full">
	<div
		class="w-full lg:w-2/5 flex items-center justify-center relative h-[10rem] lg:h-full"
	>
		<img src={imageSrc} alt={imageAlt} class="scale-50 lg:scale-100" />
	</div>
	<div
		class="w-full lg:w-3/5 flex lg:items-center lg:justify-center px-6 pb-6 lg:p-6 z-10"
	>
		<div class="flex flex-col">
			<h1>{header}</h1>
			<slot />
		</div>
	</div>
</div>
