---
export interface Props {
	imageSrc: string;
	imageAlt: string;
	header: string;
}

const { imageSrc, imageAlt, header } = Astro.props;
---

<div class="flex p-6 gap-5 h-full">
	<div class="w-2/5 flex items-center justify-center relative">
		<img src={imageSrc} alt={imageAlt} />
	</div>
	<div class="w-3/5 flex items-center justify-center p-6">
		<div class="flex flex-col">
			<h1>{header}</h1>
			<slot />
		</div>
	</div>
</div>
