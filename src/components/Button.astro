---
export interface Props {
	name: string;
	id?: string;
	href?: string;
	minimal?: boolean;
}

const { name, id, href, minimal } = Astro.props as Props;
---

<a href={href} target="_blank">
	<button
		class={`${
			minimal
				? "border-blue-600 border-2 text-blue-600"
				: "bg-blue-600  text-white"
		} py-3 px-4 rounded-full text-lg relative overflow-hidden duration-300 ease-in-out hover:scale-[1.01] hover:shadow-xl hover:z-50`}
		id={id}
	>
		<span class="z-20">{name}</span>
		<span
			class="absolute -top-1/3 -right-1/2 -bottom-1/3 -left-[100%] bg-white opacity-25 animate-shine z-0"
		></span>
	</button>
</a>
