---
export interface Props {
	name: string;
	id?: string;
}

const { name, id } = Astro.props as Props;
---

<button
	class="py-3 px-4 bg-blue-600 text-white rounded-full text-lg relative overflow-hidden duration-300 ease-in-out hover:scale-[1.01] hover:shadow-xl hover:z-50"
	id={id}
>
	<span class="z-20">{name}</span>
	<span
		class="absolute -top-1/3 -right-1/2 -bottom-1/3 -left-[100%] bg-gradient-to-b from-rose-200 via-purple-100 to-rose-200 opacity-25 animate-shine z-0"
	></span>
</button>
